{
  "version": 2,
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "vite",
  "regions": ["sfo1"],
  "outputDirectory": "dist",
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "PUBLIC_ENV__GOOGLE_ANALYTICS": "@ga_measurement_id",
    "HUGGING_FACE_API_KEY": "@huggingface_api_key"
  }
}
